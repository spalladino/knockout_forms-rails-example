<%= knockout_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :registered %>
    <%= f.check_box :registered %>
  </div>
  <div class="form-group" data-bind="visible: registered">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <hr/>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', users_path, class: "btn btn-warning" %>
  </div>
<% end %>
